function groupTasksByCategory() {
  const categories = {}
  Object.entries(QA_TASKS).forEach(([id, task]) => {
    if (!categories[task.category]) {
      categories[task.category] = []
    }
    categories[task.category].push({ id, ...task })
  })
  return categories
}

